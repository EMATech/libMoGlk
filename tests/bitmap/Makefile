CC=g++
CFLAGS=-Wall

all: bitmap

bitmap: bitmap.cpp
	$(CC) $(CFLAGS) -I ../../src -c -o bitmap.o bitmap.cpp
	$(CC) $(CFLAGS) -L ../../src -static -o bitmap bitmap.o -lmoglk

clean:
	rm bitmap.o
	rm bitmap
